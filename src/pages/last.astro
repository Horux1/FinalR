<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <title>A special gift</title>
    </head>
    <body>
        <!-- Botón volver (aparece después de unos segundos) -->
        <a href="/src/pages/video.astro" class="back-button" id="backButton">
            <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path d="M19 12H5M12 19l-7-7 7-7"></path>
            </svg>
            back
        </a>

        <!-- Contenedor del video -->
        <video
            id="mainVideo"
            class="main-video"
            controls
            preload="metadata"
            playsinline
            controlslist="nodownload"
        >
            <source src="/videos/regalo.mp4" type="video/mp4" />
            <source src="/videos/regalo.mov" type="video/quicktime" />
            Tu navegador no soporta video HTML5.
        </video>
        
    </body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        width: 100vw;
        height: 100vh;
        background: #000;
        overflow: hidden;
        font-family: -apple-system, BlinkMacSystemFont, "SF Pro Display",
            "Segoe UI", sans-serif;
    }

    /* Botón volver */
    .back-button {
        position: fixed;
        top: 2rem;
        right: 2rem;
        z-index: 100;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        opacity: 0;
        animation: fadeIn 0.5s ease 3s forwards;
    }

    .back-button:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
    }

    .back-button svg {
        width: 20px;
        height: 20px;
    }

    /* Contenedor del video */
    .video-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #000;
    }

    /* Video principal */
    .main-video {
        width: 100%;
        height: 100%;
        object-fit: contain;
        background: #000;
    }

    /* Overlay al terminar */
    .video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease;
    }

    .video-overlay.show {
        opacity: 1;
        pointer-events: all;
    }

    .overlay-content {
        text-align: center;
        color: white;
    }

    .overlay-content h2 {
        font-size: 4rem;
        margin-bottom: 2rem;
        animation: float 3s ease-in-out infinite;
    }

    /* Botón replay */
    .replay-button {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem 2.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 1.25rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.4);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .replay-button:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 50px rgba(102, 126, 234, 0.6);
    }

    .replay-button:active {
        transform: translateY(-2px);
    }

    .replay-button svg {
        animation: rotate 2s linear infinite;
    }

    /* Animaciones */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .back-button {
            top: 1rem;
            right: 1rem;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }

        .overlay-content h2 {
            font-size: 3rem;
        }

        .replay-button {
            padding: 1rem 2rem;
            font-size: 1rem;
        }
    }

    /* Ocultar controles de descarga en algunos navegadores */
    video::-webkit-media-controls-download-button {
        display: none;
    }

    video::-webkit-media-controls-enclosure {
        overflow: hidden;
    }

    video::-internal-media-controls-download-button {
        display: none;
    }
</style>

